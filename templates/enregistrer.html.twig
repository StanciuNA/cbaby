{% extends "base.html.twig" %}

{% block body %}
<div class="container d-flex justify-content-center" style="color:white">
    <div class="row">
        <h1> Formulaire d'enregistrement</h1>
    </div>
</div>
{{ form_start(form) }}
<div class="my-custom-class-for-errors">
    {{ form_errors(form) }}
</div>
<div class="container">
    <div class="form-group">
        {{ form_label(form.nom) }}
        <input
            name="{{ field_name(form.nom) }}"
            value="{{ field_value(form.nom) }}"
            placeholder="{{ field_label(form.nom) }}"
            class="form-control"
        >
    </div>
    <div class="form-group">
        {{ form_label(form.prenom) }}
        <input
            name="{{ field_name(form.prenom) }}"
            value="{{ field_value(form.prenom) }}"
            placeholder="{{ field_label(form.prenom) }}"
            class="form-control"
        >
    </div>
        <div class="form-group">
        {{ form_label(form.pseudo) }}
        <input
            name="{{ field_name(form.pseudo) }}"
            value="{{ field_value(form.pseudo) }}"
            placeholder="{{ field_label(form.pseudo) }}"
            class="form-control"
        >
    </div>
    <div class="form-group">
        {{ form_label(form.email) }}
        <input
            name="{{ field_name(form.email) }}"
            value="{{ field_value(form.email) }}"
            placeholder="{{ field_label(form.email) }}"
            class="form-control"
        >
    </div>
    <div class="form-group">
        {{ form_label(form.password) }}
        <input
            name="{{ field_name(form.password) }}"
            value="{{ field_value(form.password) }}"
            placeholder="{{ field_label(form.password) }}"
            class="form-control"
        >
    </div>
    {{ form_widget(form.valider, { 'attr': {'class': 'btn btn-primary'} }) }}
    {{ form_end(form) }}
</div>

{% endblock %}