{{ form_start(form) }}
<div class="container" style="max-width:50em">
    <div class="form-group">
        {{ form_label(form.nom) }}
        <input
            name="{{ field_name(form.nom) }}"
            value="{{ field_value(form.nom) }}"
            placeholder="{{ field_label(form.nom) }}"
            class="form-control"
        >
    </div>
    {# <h1>{{nb_membres_equipe}}</h1> #}
    <span> Les membres de l'équipe: </span>
    {% for membre in membres %}
    <div class="joueur" style="margin:1em">
      <img src="{{ asset("images/joueur_default.jpg") }}" alt="twbs" width="32" height="32" class="rounded-circle flex-shrink-0">
      <div class="d-flex gap-2 w-100 justify-content-between">
        <div>
          <h6 class="mb-0">{{membre.getJoueur}}</h6>
        </div>
      </div>
    </div>
    {% endfor %}
    {% if nb_membres_equipe == 1 %}

    <span for="joueur-select" name="joueur_invite">Inviter un autre joueur:</span>
    <div class="row" id="liste_inviter">
        <div class="col">
        <select class="form-select form-select-sm" aria-label="ajouter_un_joueur" name="joueur_invite" id="joueur_invite_select">
            {% for joueur in joueurs %}
            <option value="{{joueur.getId}}">{{joueur.getPseudo}}</option>
            {% endfor %}
        </select>
        </div>
        <div class="col">
            <button type="button" class="btn" id="inviter" style="background-color:#e6cc00; color:white margin-bottom:2em">Inviter</button>
        </div>
    </div>

    {% endif %}

    <div class="row d-flex justify-content-start">
        <div class="col">
            <a href="{{ path('app_equipe_index') }}"><button type="button" class="btn btn-danger" href="{{ path('app_equipe_index') }}">Revenir en arrière</button></a>
            <button type="submit" class="btn" style="background-color:#295E54; color:white">Valider</button>
        </div>
        <div class="class_erreurs">
            {{ form_errors(form.nom) }}
        </div>
    </div>
</div>
    
{{ form_end(form) }}

{% block javascripts %}
    <script src ="{{ asset("notifications.js") }}"></script>
{% endblock %}
